{% extends 'base.jinja2' %}
{% block content %}

<h1 style="text-align: center;">Add Your Application</h1>

<form action="/post/addApplicationAPICall" method="post" style="max-width: 500px; margin: 0 auto;">

    <div style="margin-bottom: 10px;">
        <label for='app-id'>Application Id</label>
        <input type = "text" name = "app-id" style="display: block; width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; font-size: 16px;">
    </div>

    <div style="margin-bottom: 10px;">
        <label for='server-id'>Server-Id</label>
        <input type = "text" name = "server-id" style="display: block; width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; font-size: 16px;">
    </div>

    <div style="margin-bottom: 10px;">
        <label for='port'>Port</label>
        <input type = "text" name = "port" style="display: block; width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; font-size: 16px;">
    </div>

    <div style="margin-bottom: 10px;">
        <label for='version'>Version</label>
        <input type = "text" name = "version" style="display: block; width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; font-size: 16px;">
    </div>

    <div style="margin-bottom: 10px;">
        <label for='status'>Status Active</label>
        <input type = "text" name = "status" style="display: block; width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; font-size: 16px;">
    </div>

    <div style="margin-bottom: 10px;">
        <input type = "submit" value="Submit" style="background-color: #4CAF50; color: white; padding: 12px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;">
    </div>

</form>

{% endblock %}
