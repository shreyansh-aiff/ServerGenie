{% extends 'base.jinja2' %}
{% block content %}

<section class="section">
<h1 class="title">Delete a Server</h1>
<form action="{{ url_for('deleteSpecificServerAPICall') }}" method="POST">
    <div class="field">
      <label class="label" for="server-id">Server ID:</label>
      <div class="control">
      <input class="input" type="text" name="server-id" value="{{ server_id }}" style="width:20%;" />
      </div>
    </div>
    <div>
      <input type="submit" value="Delete Server" class="button is-outlined is-danger" />
    </div>
  </form>
</section>
{% endblock %}
